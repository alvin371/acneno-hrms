def node_require(script)
  # Resolve script with node to allow for hoisting
  require Pod::Executable.execute_command('node', ['-p',
    "require.resolve(
      '#{script}',
      {paths: [process.argv[1]]},
    )", __dir__]).strip
end

node_require('react-native/scripts/react_native_pods.rb')
node_require('react-native-permissions/scripts/setup.rb')

platform :ios, min_ios_version_supported
prepare_react_native_project!

setup_permissions([
  'LocationWhenInUse',
])

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

target 'HrManagementSystem' do
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  post_install do |installer|
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      # :ccache_enabled => true
    )

    # Disable User Script Sandboxing (Xcode 15+) and Explicit Modules
    # (Xcode 16+) to fix RCTSwiftUI.modulemap not found during builds.
    # Both Swift and Clang explicit modules must be disabled because the
    # dependency scanner runs before SPM packages are built.
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        config.build_settings['ENABLE_USER_SCRIPT_SANDBOXING'] = 'NO'
        config.build_settings['SWIFT_ENABLE_EXPLICIT_MODULES'] = 'NO'
        config.build_settings['CLANG_ENABLE_EXPLICIT_MODULES'] = 'NO'
      end
    end

    installer.pods_project.build_configurations.each do |config|
      config.build_settings['ENABLE_USER_SCRIPT_SANDBOXING'] = 'NO'
      config.build_settings['SWIFT_ENABLE_EXPLICIT_MODULES'] = 'NO'
      config.build_settings['CLANG_ENABLE_EXPLICIT_MODULES'] = 'NO'
    end

    # Strip SPM module map refs from the MAIN APP xcconfig only.
    # These reference files inside DerivedData that don't exist until
    # SPM packages build. Individual Pod target xcconfigs are left intact.
    Dir.glob(File.join(installer.sandbox.root, 'Target Support Files',
             'Pods-HrManagementSystem', '*.xcconfig')).each do |xcconfig_path|
      xcconfig = File.read(xcconfig_path)
      xcconfig.gsub!(%r{-Xcc -fmodule-map-file="\$\{PODS_CONFIGURATION_BUILD_DIR\}/[^"]*"}, '')
      xcconfig.gsub!(%r{-fmodule-map-file="\$\{PODS_CONFIGURATION_BUILD_DIR\}/[^"]*"}, '')
      xcconfig.gsub!(/  +/, ' ')
      File.write(xcconfig_path, xcconfig)
    end
  end
end
